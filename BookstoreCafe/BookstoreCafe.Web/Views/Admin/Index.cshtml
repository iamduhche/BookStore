@model int

@{
    ViewBag.Title = "Admin Panel";
}

<head>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<div class="container mt-5" style="margin-bottom: 100px">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">Admin Panel</div>

                <div class="card-body">
                    <h5>Welcome, Admin!</h5>
                    <p>You have <strong>@Model</strong> orders pending.</p>
                </div>

                <div class="card-footer">
                    <a href="@Url.Action("Orders", "Admin")" class="btn btn-primary">View Orders</a>
                    <a href="@Url.Action("Add", "Books")" class="btn btn-success">Add a Book</a>
                    <a href="@Url.Action("AddMenu", "Menu")" class="btn btn-success">Add a Menu Item</a>
                </div>
            </div>
        </div>
    </div>
</div>
