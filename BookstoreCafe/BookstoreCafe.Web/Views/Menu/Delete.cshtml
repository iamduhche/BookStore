@model BookstoreCafe.Web.Models.MenuItemViewModel

@{
    ViewData["Title"] = "Delete Menu Item";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <h1 class="site-heading text-center text-faded d-none d-lg-block">
            <span class="site-heading-lower">@ViewData["Title"]</span>
        </h1>
    </header>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-body">
                        <h2 class="card-title text-center text-primary">@ViewData["Title"]</h2>
                        <hr />
                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="Id" />
                            <div class="row">
                                <div class="col-md-4">
                                    <img class="card-img-top" src="@Model.ImageUrl" alt="@Model.Name">
                                </div>
                                <div class="col-md-8">
                                    <div class="form-group">
                                        <label asp-for="Name" class="control-label"></label>
                                        <input asp-for="Name" class="form-control" disabled="disabled" />
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Ingredients" class="control-label"></label>
                                        <textarea asp-for="Ingredients" class="form-control" rows="3" disabled="disabled"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Price" class="control-label"></label>
                                        <input asp-for="Price" class="form-control" disabled="disabled" />
                                    </div>
                                    <div class="form-group mt-3">
                                        <input type="submit" value="Delete" class="btn btn-danger" />
                                        <a href="@Url.Action("Index", "Menu")" class="btn btn-secondary ml-2">Cancel</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
