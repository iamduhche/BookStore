@{
    ViewData["Title"] = "Unauthorized";
}

<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8 col-xl-6">
            <div class="card shadow">
                <div class="card-body text-center">
                    <h1 class="display-4 text-danger">401</h1>
                    <h2 class="text-warning">Unauthorized</h2>
                    <p class="lead mt-4">You do not have the necessary permissions to access this page. Please check your credentials and try again.</p>
                    <hr />
                    <a href="/Identity/Account/Login" class="btn btn-primary mt-3">Login</a>
                    <a href="/" class="btn btn-secondary mt-3">Go Back to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>
