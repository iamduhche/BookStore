@{
    ViewData["Title"] = "Error";
}

<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/form-style.css" />
</head>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8 col-xl-6">
            <div class="card shadow">
                <div class="card-body text-center">
                    <h1 class="display-4 text-danger">Oops!</h1>
                    <h2 class="text-danger">Something went wrong.</h2>
                    <p class="lead mt-4">An error occurred while processing your request. Please try again later.</p>
                    <hr />
                    <a href="/" class="btn btn-primary mt-3">Go Back to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>
