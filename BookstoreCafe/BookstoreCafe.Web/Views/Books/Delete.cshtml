@model BookModel

@{
    ViewBag.Title = "Delete Book";
}

<head>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/form-style.css" />
</head>

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-sm-12 col-lg-8 col-xl-6">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title text-center text-primary">@ViewBag.Title</h2>
                    <hr />
                    <form asp-action="Delete" method="post">
                        <div class="row">
                            <div class="col-md-4">
                                <img class="card-img-top" src="@Model.ImageUrl" alt="Book Image">
                            </div>
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label asp-for="Title" class="control-label"></label>
                                    <input asp-for="Title" class="form-control" disabled="disabled" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Author" class="control-label"></label>
                                    <input asp-for="Author" class="form-control" disabled="disabled" />
                                </div>
                                <div class="form-group mt-3">
                                    <input type="submit" value="Delete" class="btn btn-danger" />
                                    <a asp-action="All" asp-controller="Books" class="btn btn-secondary ml-2">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
